@page "/account/login"
@using JaffChat.Client.Account.Contracts;
@using JaffChat.Client.Account.Models;
@using JaffChat.Client.Account.Services;
@inject NavigationManager NavigationManager
@inject IIdentityService IdentityService

<div class="card">
    <h4 class="card-header">Login</h4>
    <div class="card-body">
        <EditForm Model="@loginModel" OnValidSubmit="@HandleSubmit">
            <div class="form-group">
                <label>Email</label>
                <InputText @bind-Value="loginModel.Email" class="form-control" />
            </div>
            <div class="form-group">
                <label>Password</label>
                <InputText @bind-Value="loginModel.Password" type="password" class="form-control" />
            </div>
            <button class="btn btn-primary">
                Login
            </button>
            <NavLink href="account/register" class="btn btn-link">Register</NavLink>
        </EditForm>
    </div>
</div>

@code {
    private LoginDto loginModel = new();

    public async Task HandleSubmit()
    {
        var response = await IdentityService.Login(loginModel);
    }
}
